@{
    ViewBag.Title = "Admin - Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_AdminForm")

<div class="above-main">
    <div class="rightSide">
        @Html.ActionLink("Create New User", "AddUser", "Admin", null, new { @class = "btn btn-default" })
    </div>
</div>

<div class="main">
    <table class="course">
        <caption>All users</caption>
        <thead>
            <tr>
                <th>Teachers</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => element)</td>
                    <td>
                        <a class="delete">Delete</a>
                        <a class="edit">Edit</a>
                        <a>View users</a>
                    </td>
                </tr>
            }
        </tbody>
        <thead>
            <tr>
                <th>Students</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => element)</td>
                    <td>
                        <a class="delete">Delete</a>
                        <a class="edit">Edit</a>
                        <a>View users</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>