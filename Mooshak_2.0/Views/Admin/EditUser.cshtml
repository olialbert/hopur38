@{
    ViewBag.Title = "User Page";
}





@using (Html.BeginForm())
{

    @model List<string>

 
    //Student
    <input type="hidden" value="@Model.ElementAt(0)" name="SearchName" />    
    <p>Name:</p>
    <input type="text" value="@Model.ElementAt(0)" name="Name" />
    <p>Username:</p>
    <input type="text" value="@Model.ElementAt(1)"  name="Username" />
    <p>Password:</p>
    <input type="text" value="@Model.ElementAt(2)" name="Password" />
    <p>Ssn:</p>
    <input type="text" value="@Model.ElementAt(3)" name="Ssn" />
    <p>Email:</p>
    <input type="text" value="@Model.ElementAt(4)" name="Email" />

    bool IsStudent = false;
    <p>Role</p>
    if (Model.ElementAt(5) == "Student")
    {
        IsStudent = true;
    }


    @Html.RadioButton("Role", "2", !IsStudent) <span>Teacher</span>
    @Html.RadioButton("Role", "3", IsStudent) <span>Student</span>
    <br />

    <input type="submit" value="submit" onclick="location.href='@Url.Action("Index", "Home" )'" />
}
    

<input type="button" value="Cancel" onclick="location.href='@Url.Action("Users", "Admin")'" />

