@{
    ViewBag.Title = "Select course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/DefaultWithTable.css">
<link rel="stylesheet" type="text/css" href="~/Content/TeacherCss.css">

@model List<string>

<div class="leftSide">
    <div class="above">
        <div class="User leftSide">
            <img id="per" src="~/Content/Person.png" alt="Person" />
            <div class="labels">
                <label>Username</label><br />
                <label>Teacher</label>
            </div>
        </div>
    </div>
    <div id="sidebar">
        <ul>
            <li id="sidebar-title">Courses</li>
            @foreach (var element in Model)
            {
                string name = element;
                <li> @Html.ActionLink(name, "SelectAssignments", new { id = element })</li>
            }
        </ul>
    </div>
</div>
    <div class="above-main"></div>
    <div class="main">
        <table class="default teacher">
            <caption>Courses</caption>
            <thead>
                <tr>
                    <th>Assignment</th>
                    <th>Due Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr> 
            </tbody>
        </table>
    </div>
