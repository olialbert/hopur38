@{
    ViewBag.Title = "Select Assignment";
}

<link rel="stylesheet" type="text/css" href="~/Content/DefaultWithTable.css">
<link rel="stylesheet" type="text/css" href="~/Content/TeacherCss.css">

<!--Connects the cshtml with the model below-->
@model Mooshak_2._0.Models.StudentIdsViewModel

<div class="leftSide">
    <div class="above">
        <div>
            <img id="person" align="left" src="~/Content/Person.png" alt="Smiley face">
            <div class="lab">
                <label>Username</label><br />
                <label>Teacher</label>
            </div>
        </div>
    </div>
    <div id="sidebar">
        <ul>
            <li id="sidebar-title">Courses</li>

            <!--Displays the courses using the model-->
            @foreach (var element in Model.Courses)
            {
                string name = element;
                <li> @Html.ActionLink(name, "SelectAssignments", new { id = element, studentID = Model.StudentName})</li>
            }


        </ul>
    </div>
</div>
<div class="above-main"></div>
<div class="main">
    <table class="default teacher">
        <caption>Courses</caption>
        <thead>
            <tr>
                <th>Assignment</th>
                <th>Due Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>

            <!--Displays all of the assignments in the selected course using the model-->
            @foreach (var element in Model.Assignments)
            {
                string name = element;
                <tr>
                    <td>
                        @Html.ActionLink(name, "SelectSubAssignment", new { id = element, CourseID = Model.CourseName, StudentID = Model.StudentName })
                    </td>
                    <td>06/06/06</td>
                    <td>Accepted</td>
                </tr>
            }
        </tbody>
    </table>
</div>
