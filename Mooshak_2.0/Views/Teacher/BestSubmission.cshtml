@{
    ViewBag.Title = "BestSubmittions - Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/DefaultWithTable.css">
<link rel="stylesheet" type="text/css" href="~/Content/TeacherCss.css">

<div class="above-main"></div>
<div class="main">
    <table class="default teacher">
        <caption>Students - @Model.PartAssignmentName</caption>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Path</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <!--Displays list of the best submits from the selected assignment from the Model-->
           @foreach (var element in Model.BestSubmit)
           {             
               string path = element.PathToAssignmentSave;
               string grade = element.Grade.ToString();
                <tr>
                    <td>@Model.StudentName</td>
                    <td> @Html.DisplayFor(m => path)</td>
                    <td> @Html.DisplayFor(m => grade)</td>
                </tr>
            }
        </tbody>
    </table>
    <input class="btn btn-default" type="button" value="Back To Course" onclick="location.href='@Url.Action("SelectStudent", "Teacher", new { id = Model.PartAssignmentName, mainID = Model.AssignmentName, courseID = Model.CourseName, TeacherID = Model.Name })'" />
</div>

