@{
    ViewBag.Title = "Assignments - Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TeacherForm")

@model Mooshak_2._0.Models.TeacherViewModelsAssignmetns

<div class="above-main">
    <div class="rightSide">
        @Html.ActionLink("Create New Assignment", "AddAssignment", new { id = @Model.CurrentClass }, new { @class = "btn btn-default" })
    </div>
</div>

<div class="main">
    <table class="default teacher">
        <caption>Courses</caption>
        <thead>
            <tr>
                <th>Assignment</th>
                <th>Due Date</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model.Assignments)
            {
                <tr>
                    <td>@Html.DisplayFor(m => element)</td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteTeacher", new { id = element }, new { @class = "delete" })
                        @Html.ActionLink("Edit", "EditAssignment", new { id = element }, new { @class = "edit" })
                    </td>
                </tr>
                        foreach (var subelement in element.SubAssignments)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => subelement)</td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteTeacher", new { id = subelement }, new { @class = "delete" })
                                    @Html.ActionLink("Edit", "EditUser", new { id = subelement }, new { @class = "edit" })
                                </td>
                            </tr>
                        }


            }
            <tr>
                <td></td>
                <td>01/01/16 - 23:59</td>
                <td>
                    @Html.ActionLink("Add sub-assignment", "AddSubAssignment")
                </td>
            </tr>
            <tr>
                <td>Assignment 2</td>
                <td>01/01/16 - 23:59</td>
                <td>
                    @Html.ActionLink("Add sub-assignment", "ViewUsersinCourse")
                </td>
            </tr>
            
        </tbody>
    </table>
</div>