
@{
    ViewBag.Title = "EditAssignment";
}

<h2>EditAssignment</h2>


@model Mooshak_2._0.Models.AddAssignmentViewModel
<div class="main">
    @using (Html.BeginForm())
    {


        string Value = @Model.Assignments.ElementAt(1);
        Value = Value.Remove(Value.Length - 11);

        string day = Value.Substring(0, Value.IndexOf('-')+1);
        Value = Value.Remove(0,day.Length);
        string month = Value.Substring(0, Value.IndexOf('-')+1);
        int montNum = DateTime.Parse("01," +month+",1900").Month;
        string monthVal = montNum.ToString();
        monthVal = (monthVal.Length == 1) ? ("0" + monthVal) : monthVal;
        Value = Value.Remove(0, month.Length);
        string Year = "20" + Value;
        Year = Year.Remove(Year.Length-1);
        day= day.Remove(day.Length - 1);
                 
                <input type="hidden" value="@Model.Name" name="TeacherID" />
                <input type="hidden" value="@Model.Assignments.ElementAt(0)" name="searchName" />
                <input type="hidden" value="@Model.Assignments.ElementAt(2)" name="searchCourseName" />
                <div class="form-group">
                    <label for="updateName">Name:</label>
                    <input type="text" value="@Model.Assignments.ElementAt(0)" class="form-control" name="updateName" />
                </div>
                <div class="form-group">
                    <label for="updateDueDate">Due date:</label>
                    <input type="date" value="@Year-@monthVal-@day" class="form-control" name="updateDueDate" />
                </div>

                <input class="btn btn-default" type="submit" value="Submit" />
                <input class="btn btn-default" type="button" value="Cancel" onclick="location.href='@Url.Action("Assignments", "Teacher", new { id = @Model.Assignments.ElementAt(2), TeacherID = @Model.Name })'" />
    }
</div>